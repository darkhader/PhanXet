extends ../layout    
block content
  
  
    h1 #{TenCurrentSentenceText.length} câu
    hr
    each sentence, i in TenCurrentSentenceText
     div
      h5  Câu #{ i+1  } : 
      br 
      span #{sentence.text}
     div.d-flex.flex-row-reverse
      select.mySelect
       option(value='#') 
       option(data-textid=TenCurrentSentenceText[i]._id data-answer="Tích Cực") Tích cực
       option(data-textid=TenCurrentSentenceText[i]._id data-answer="Tiêu Cực" ) Tiêu cực
      button.reportCheckResult.btn.btn-warning
        | Báo cáo  
     hr
    div.mt-5.d-flex.justify-content-center  
  
      button#comeBack.btn.btn-primary
        i.fa.fa-arrow-circle-o-down
        | Quay lại
      
    #myModal.modal.fade(role='dialog')
      .modal-dialog 
        .modal-content
          .modal-header
            h4.modal-title Thông báo          
            button.close(type='button', data-dismiss='modal') ×
          .modal-body
            p Cảm ơn bạn đã phán xét
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Đóng
    #reportModal.modal.fade(role='dialog')
      .modal-dialog 
        .modal-content
          .modal-header
            h4.modal-title Thông báo          
            button.close(type='button', data-dismiss='modal') ×
          .modal-body
            p Cảm ơn bạn đã báo cáo
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Đóng   
    #myErrorModal.modal.fade(role='dialog')
      .modal-dialog 
        .modal-content
          .modal-header
            h4.modal-title Thông báo          
            button.close(type='button', data-dismiss='modal') ×
          .modal-body
            p Xin lỗi bạn đã phán xét
          .modal-footer
            button.btn.btn-default(type='button', data-dismiss='modal') Đóng        
   
        